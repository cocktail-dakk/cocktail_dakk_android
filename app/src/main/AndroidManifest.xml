<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.umcapplunching.cocktail_dakk"
    >
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name="CocktailDakkApplication"
        android:requestLegacyExternalStorage="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Cocktail_dakk"
        >
<!--        AppCompatDelegate.setDefaultNightMode(AppCompatDelegate.MODE_NIGHT_NO)-->

        <activity android:name=".ui.main.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:launchMode="singleTask"
            >
<!--            android:launchMode="singleTop"-->

        </activity>

        <activity android:name="com.umcapplunching.cocktail_dakk.ui.search_tab.SearchTabActivity">
        </activity>

        <activity
            android:name="com.umcapplunching.cocktail_dakk.ui.menu_detail.MenuDetailActivity"
            android:exported="true" />

        <activity
            android:name="com.umcapplunching.cocktail_dakk.ui.start.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.umcapplunching.cocktail_dakk.ui.main.home_detail.HomeDetailActivity" />
        <activity android:name="com.umcapplunching.cocktail_dakk.ui.start.StartActivity"
            android:exported="true"/>

        <activity
            android:name="com.umcapplunching.cocktail_dakk.ui.start.setting.StartSettingActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustNothing" />

        <activity android:name="com.umcapplunching.cocktail_dakk.ui.start.setting.StartNameActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustNothing" />

        <activity android:name="com.umcapplunching.cocktail_dakk.ui.locker.SettingsActivity"
            android:exported="true"/>
        <activity android:name="com.umcapplunching.cocktail_dakk.ui.locker.SettingsPersonalActivity"
            android:exported="true"/>
    </application>

</manifest>