<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
    </style>

<!--    bottom navigation text selected -> bold-->
    <style name="BottomNavigation.ActiveItemTextAppearanceActive" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BottomNavigation.ActiveItemTextAppearanceInActive" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <!--        <item name="android:fontFamily">@font/whatever</item>-->
    </style>
</resources>