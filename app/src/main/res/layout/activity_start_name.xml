<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/setting_name_bg">




    <TextView
        android:id="@+id/start_name_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용할\n닉네임을\n알려주세요"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/start_name_name_et"
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:layout_height="40dp"
        android:hint="입력하기"
        android:textColor="#999999"
        android:singleLine="true"
        android:background="@drawable/setting_bg_btn_radius_wh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_name_title_tv"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/start_name_start_btn_tv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_name_nickcheck_tv"
        android:text="닉네임을 입력해주세요."
        android:textSize="16dp"
        android:visibility="gone"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/start_name_name_et"
        app:layout_constraintStart_toStartOf="@id/start_name_name_et"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/start_name_start_btn_tv"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/setting_bg_btn_radius_gr"
        android:gravity="center"
        android:text="완료"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_name_name_et"
        app:layout_constraintBottom_toBottomOf="parent"/>

