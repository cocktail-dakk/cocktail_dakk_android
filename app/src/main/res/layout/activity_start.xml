<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/setting_bg">

    <TextView
        android:id="@+id/start_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취향 키워드\n설정하기"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/start_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취향을 설정하면\n\n여러분이 좋아할 만한 칵테일을\n\n추천해 드려요"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/start_title_tv"
        app:layout_constraintTop_toBottomOf="@id/start_title_tv"
        android:layout_marginTop="50dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/start_start_btn_tv"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/setting_bg_btn_radius_gr"
        android:gravity="center"
        android:text="시작하기"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/start_text_tv"
        app:layout_constraintTop_toBottomOf="@id/start_text_tv"
        android:layout_marginTop="60dp"/>


<!--    건너뛰기-->
    <TextView
        android:visibility="visible"
        android:id="@+id/start_skip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건너뛰기"
        android:textColor="#CCFFFFFF"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/start_start_btn_tv"
        app:layout_constraintBottom_toBottomOf="@+id/start_start_btn_tv"
        app:layout_constraintEnd_toStartOf="@id/start_skip_btn_iv"
        />

    <ImageView
        android:id="@+id/start_skip_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting_next"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/start_skip_tv"
        app:layout_constraintBottom_toBottomOf="@id/start_skip_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="0dp"
        />








</androidx.constraintlayout.widget.ConstraintLayout>