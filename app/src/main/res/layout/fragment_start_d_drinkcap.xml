    <TextView
        android:id="@+id/item_start_setting_drinkcap_vp_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:text="@string/fragment_start_d_title"
        android:textColor="@color/white"

        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_drinkcap_temp_la"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintBottom_toTopOf="@+id/start_drinkcap_next_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_start_setting_drinkcap_vp_tv" />

    <TextView
        android:id="@+id/item_drinkcap_a_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/fragment_start_d_question"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/item_start_setting_drinkcap_vp_tv"
        app:layout_constraintTop_toTopOf="@+id/item_drinkcap_temp_la" />


    <SeekBar
        android:id="@+id/item_drinkcap_slider"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_filter_seekbar"
        android:max="40"
        android:progress="10"
        android:thumb="@drawable/seek_tumb"
        app:layout_constraintTop_toBottomOf="@id/item_drinkcap_a_tb"
        />


