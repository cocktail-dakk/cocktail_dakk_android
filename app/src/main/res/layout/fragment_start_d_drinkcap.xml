<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/setting_name_bg"
    >

    //android:background="#000000"

    <TextView
        android:id="@+id/item_start_setting_drinkcap_vp_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주량을\n알려주세요"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_drinkcap_a_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주로 마시는 술의 도수"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/item_start_setting_drinkcap_vp_tv"
        app:layout_constraintTop_toBottomOf="@id/item_start_setting_drinkcap_vp_tv"
        android:layout_marginTop="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>