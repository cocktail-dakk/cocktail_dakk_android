    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:text="@string/fragment_start_d_dosu_format"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/item_drinkcap_slider"
        app:layout_constraintTop_toBottomOf="@id/item_drinkcap_slider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="25sp"
        android:text="@string/fragment_start_d_dosu_max"
        android:textColor="@color/white"
