<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/main_keywordrec_todaycock_iv"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/img_cocktail_brandysour_dailyrec"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/main_keywordrec_todaycock_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_keywordrec_today_cocktail_name"
        android:textColor="@color/white"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="27sp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/main_keywordrec_todaycock_enname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_keywordrec_today_cocktail_name"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/main_keywordrec_todaycock_name_tv"
        app:layout_constraintTop_toBottomOf="@id/main_keywordrec_todaycock_name_tv"
        android:textSize="15sp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_keywordrec_textlv"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/main_keywordrec_todaycock_enname_tv"
        app:layout_constraintEnd_toEndOf="@id/main_keywordrec_todaycock_name_tv"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_rect_grey">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_keywordrec_currentpage_tv"
            android:text="@string/_1"
            android:textSize="12sp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_slash"
            android:textSize="12sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/main_keywordrec_totalpage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_5"
            android:textSize="12sp"
            android:textColor="@color/white"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>



