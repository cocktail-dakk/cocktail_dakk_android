        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintTop_toBottomOf="@+id/setting_like_jin_tv"-->
        <!--        />-->

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/start_gijucap_next_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:textSize="20sp"
        android:background="@drawable/icon_setting_start"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:text="@string/fragment_start_next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_gijucap_back_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:background="@mipmap/icon_detail_backarrow"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>