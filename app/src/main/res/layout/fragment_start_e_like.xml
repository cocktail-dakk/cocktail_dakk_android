<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    //android:background="#00000000"-->


    <TextView
        android:id="@+id/item_start_setting_like_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        android:lineSpacingExtra="10dp"
        android:text="@string/preferCocktail_text"
        android:textColor="@color/white"

        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/setting_like_rum_cb"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:button="@android:color/transparent"
        android:gravity="center"
        android:text="럼"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_start_setting_like_title_tv" />

    <CheckBox
        android:id="@+id/setting_like_vodca_cb"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:button="@android:color/transparent"
        android:gravity="center"
        android:text="보드카"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/setting_like_tequila_cb"
        app:layout_constraintStart_toEndOf="@id/setting_like_rum_cb"
        app:layout_constraintTop_toTopOf="@+id/setting_like_rum_cb" />

    <CheckBox
        android:id="@+id/setting_like_tequila_cb"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:button="@android:color/transparent"
        android:gravity="center"
        android:text="데킬라"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/setting_like_vodca_cb"
        app:layout_constraintTop_toTopOf="@+id/setting_like_rum_cb" />

    <CheckBox
        android:id="@+id/setting_like_wiski_tv"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:button="@android:color/transparent"
        android:gravity="center"
        android:text="위스키"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/setting_like_rum_cb"
        app:layout_constraintTop_toBottomOf="@+id/setting_like_rum_cb" />

    <CheckBox
        android:id="@+id/setting_like_brandy_cb"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:button="@android:color/transparent"
        android:gravity="center"
        android:text="브랜디"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/setting_like_tequila_cb"
        app:layout_constraintStart_toEndOf="@id/setting_like_rum_cb"
        app:layout_constraintTop_toTopOf="@+id/setting_like_wiski_tv" />

    <CheckBox
        android:id="@+id/setting_like_liqueur_cb"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:button="@android:color/transparent"
        android:gravity="center"
        android:text="리큐르"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@id/setting_like_vodca_cb"
        app:layout_constraintTop_toTopOf="@+id/setting_like_wiski_tv" />

    <CheckBox
        android:id="@+id/setting_like_jin_tv"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:button="@android:color/transparent"
        android:gravity="center"
        android:text="진"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/setting_like_rum_cb"
        app:layout_constraintTop_toBottomOf="@+id/setting_like_wiski_tv" />

