<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

<!--    //android:background="#00000000"-->


    <TextView
        android:id="@+id/item_start_setting_like_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preferCocktail_text"
        android:lineSpacingExtra="10dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/setting_like_rum_cb"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:button="@android:color/transparent"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/item_start_setting_like_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="럼"
        />

    <CheckBox
        android:id="@+id/setting_like_vodca_cb"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:button="@android:color/transparent"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/setting_like_rum_cb"
        app:layout_constraintStart_toEndOf="@id/setting_like_rum_cb"
        app:layout_constraintEnd_toStartOf="@id/setting_like_tequila_cb"
        android:gravity="center"
        android:text="보드카"
        />

    <CheckBox
        android:id="@+id/setting_like_tequila_cb"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:button="@android:color/transparent"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/setting_like_rum_cb"
        app:layout_constraintStart_toEndOf="@id/setting_like_vodca_cb"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="데킬라"
        />

    <CheckBox
        android:id="@+id/setting_like_wiski_tv"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:button="@android:color/transparent"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"        app:layout_constraintTop_toBottomOf="@+id/setting_like_rum_cb"
        app:layout_constraintStart_toStartOf="@id/setting_like_rum_cb"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="위스키"
        />

    <CheckBox
        android:id="@+id/setting_like_brandy_cb"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:button="@android:color/transparent"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"        app:layout_constraintTop_toTopOf="@+id/setting_like_wiski_tv"
        app:layout_constraintStart_toEndOf="@id/setting_like_rum_cb"
        app:layout_constraintEnd_toStartOf="@id/setting_like_tequila_cb"
        android:gravity="center"
        android:text="브랜디"
        />

    <CheckBox
        android:id="@+id/setting_like_liqueur_cb"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:button="@android:color/transparent"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"        app:layout_constraintTop_toTopOf="@+id/setting_like_wiski_tv"
        app:layout_constraintStart_toEndOf="@id/setting_like_vodca_cb"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"

        android:gravity="center"
        android:text="리큐르"
        />

    <CheckBox
        android:id="@+id/setting_like_jin_tv"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:button="@android:color/transparent"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/setting_like_wiski_tv"
        app:layout_constraintStart_toStartOf="@id/setting_like_rum_cb"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="진"
        />

    <CheckBox
        android:id="@+id/setting_like_anything_tv"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:button="@android:color/transparent"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"        app:layout_constraintTop_toBottomOf="@+id/setting_like_wiski_tv"
        app:layout_constraintStart_toStartOf="@+id/setting_like_brandy_cb"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="마셔본적이 없어요"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_gijucap_next_tv"
        android:text="다음"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_gijucap_back_tv"
        android:text="이전"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>