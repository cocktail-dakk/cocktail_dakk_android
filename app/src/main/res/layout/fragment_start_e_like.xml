<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

<!--    //android:background="#00000000"-->

    <CheckBox
        android:id="@+id/main_filter_giju_wiski_bt"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:button="@android:color/transparent"
        android:background="@drawable/selector_main_filter"
        android:gravity="center"
        android:text="위스키" />

    <TextView
        android:id="@+id/item_start_setting_like_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preferCocktail_text"
        android:lineSpacingExtra="10dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/setting_like_a_tv"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:text="럼"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/item_start_setting_like_title_tv"
        app:layout_constraintEnd_toStartOf="@id/setting_like_b_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/setting_like_b_tv"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:text="위스키"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/item_start_setting_like_title_tv"
        app:layout_constraintStart_toEndOf="@+id/setting_like_a_tv"
        app:layout_constraintEnd_toStartOf="@id/setting_like_c_tv"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/setting_like_c_tv"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:text="진"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/item_start_setting_like_title_tv"
        app:layout_constraintStart_toEndOf="@id/setting_like_b_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/setting_like_d_tv"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:text="데킬라"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/setting_like_a_tv"
        app:layout_constraintStart_toStartOf="@id/setting_like_a_tv"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/setting_like_e_tv"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:text="브랜디"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/setting_like_b_tv"
        app:layout_constraintStart_toStartOf="@id/setting_like_b_tv"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/setting_like_f_tv"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:text="보드카"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/setting_like_c_tv"
        app:layout_constraintStart_toStartOf="@id/setting_like_c_tv"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/setting_like_none_tv"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@drawable/setting_bg_btn_radius_bl_on_off"
        android:text="마셔본 적이 없어요"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/setting_like_e_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>