<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:id="@+id/item_searchtab_iconmagnifier_iv"
        android:src="@mipmap/icon_search_magnifier"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/item_searchtab_tv"
        app:layout_constraintTop_toTopOf="@+id/item_searchtab_iconmagnifier_iv"
        app:layout_constraintStart_toEndOf="@+id/item_searchtab_iconmagnifier_iv"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_searchtab_iconmagnifier_iv"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="블루 화아이지롱"/>

</androidx.constraintlayout.widget.ConstraintLayout>