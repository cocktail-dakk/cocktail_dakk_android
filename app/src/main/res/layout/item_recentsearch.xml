<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/round_rect_white_in_sky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_recentsearch_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:paddingTop="2dp"
            android:text="@string/item_recentsearch_keyword"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/item_recentsearch_del_iv"
            android:layout_gravity="center"
            android:src="@drawable/search_history_delete"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>