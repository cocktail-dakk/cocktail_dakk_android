<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/keywordrec_todaycock_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="오늘의 칵테일"
                />

            <ImageView
                android:id="@+id/keywordrec_todaycock_iv"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/recommend_todays"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/keywordrec_todaycock_tv"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/keywordrec_todaycock_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="칵테일 이름"
                app:layout_constraintEnd_toEndOf="@+id/keywordrec_todaycock_iv"
                app:layout_constraintTop_toTopOf="@+id/keywordrec_todaycock_iv"
                android:textColor="@color/white"
                android:layout_marginEnd="30dp"
                android:textSize="26sp"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/keywordrec_todaycock_tag_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# KeyWord1"
                app:layout_constraintTop_toBottomOf="@id/keywordrec_todaycock_name_tv"
                app:layout_constraintEnd_toEndOf="@id/keywordrec_todaycock_name_tv"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/keywordrec_todaycock_tag_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# KeyWord1"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/keywordrec_todaycock_tag_tv1"
                app:layout_constraintEnd_toEndOf="@id/keywordrec_todaycock_tag_tv1"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/keywordrec_todaycock_tag_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="# KeyWord1"
                app:layout_constraintTop_toBottomOf="@id/keywordrec_todaycock_tag_tv2"
                app:layout_constraintEnd_toEndOf="@id/keywordrec_todaycock_tag_tv2"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/keywordrec_howthiscock_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:text="이런 칵테일 어때요?"
                android:textSize="23dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/keywordrec_todaycock_iv"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/keywordrec_themecock1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:text="#추운겨울에 마시기 좋은 따뜻한 칵테일"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/keywordrec_howthiscock_tv"
                app:layout_constraintStart_toStartOf="parent"
                />
            <ImageView
                android:id="@+id/keywordrec_themecock1_iv"
                android:layout_width="70dp"
                android:layout_height="125dp"
                android:src="@drawable/recommend_ex1"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@+id/keywordrec_themecock1_tv"
                app:layout_constraintStart_toStartOf="@+id/keywordrec_themecock1_tv"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/keywordrec_themecock1_kname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한글 이름"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/keywordrec_themecock1_iv"
                />
            <TextView
                android:id="@+id/keywordrec_themecock1_ename_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영어 이름"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@+id/keywordrec_themecock1_kname_tv"
                app:layout_constraintTop_toBottomOf="@+id/keywordrec_themecock1_kname_tv"
                />

            <TextView
                android:id="@+id/keywordrec_themecock2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:text="#20대 여성에게 인기있는"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/keywordrec_themecock1_ename_tv"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/keywordrec_themecock2_iv"
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:src="@drawable/recommend_ex2"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@+id/keywordrec_themecock2_tv"
                app:layout_constraintStart_toStartOf="@+id/keywordrec_themecock2_tv"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/keywordrec_themecock2_kname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한글 이름"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/keywordrec_themecock2_iv"
                />
            <TextView
                android:id="@+id/keywordrec_themecock2_ename_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영어 이름"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@+id/keywordrec_themecock2_kname_tv"
                app:layout_constraintTop_toBottomOf="@+id/keywordrec_themecock2_kname_tv"
                />
            <TextView
                android:id="@+id/keywordrec_themecock3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:text="#20대 남성에게 인기있을까요"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/keywordrec_themecock2_ename_tv"
                app:layout_constraintStart_toStartOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>