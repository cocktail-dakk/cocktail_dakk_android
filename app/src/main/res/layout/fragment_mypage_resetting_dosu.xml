<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <SeekBar
        android:id="@+id/mypage_resetting_dosu_slider_sb"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="65dp"
        android:max="40"
        android:progress="20"
        android:background="@drawable/selector_filter_seekbar"
        android:thumb="@drawable/seek_tumb"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_mypage_resetting_dosu_min_dosu"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/mypage_resetting_dosu_slider_sb"
        app:layout_constraintTop_toBottomOf="@id/mypage_resetting_dosu_slider_sb"
        android:paddingStart="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_mypage_resetting_dosu_max_dosu"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/mypage_resetting_dosu_slider_sb"
        app:layout_constraintTop_toBottomOf="@id/mypage_resetting_dosu_slider_sb"
        android:paddingEnd="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mypage_resetting_dosu_range_tv"
        android:text="@string/fragment_mypage_resetting_dosu_selected_dosu"
        app:layout_constraintTop_toBottomOf="@id/mypage_resetting_dosu_slider_sb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>