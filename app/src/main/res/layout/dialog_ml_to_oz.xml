<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_detail_mltooz_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:text="소주잔으로 ML, Oz 계랑하기"
                android:id="@+id/menu_detail_mltooz_tv"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_close"
                android:id="@+id/menu_detail_mltooz_close_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/menu_detail_mltooz_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <!-- 45ml-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/opacity20_transparent"
                            android:id="@+id/menu_detail_mltooz_45_lv"
                            app:layout_constraintEnd_toStartOf="@+id/menu_detail_mltooz_45_lv2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            >
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="85dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@color/background_color_opacity80"
                                />
                            <ImageView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_width="15dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/shape_triangle_right_left_white" />

                            <ImageView
                                android:layout_width="15dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/shape_triangle_right_right_white" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/menu_detail_mltooz_45_lv2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/menu_detail_mltooz_45_lv"
                            app:layout_constraintTop_toTopOf="@id/menu_detail_mltooz_45_lv"
                            app:layout_constraintBottom_toBottomOf="@id/menu_detail_mltooz_45_lv"
                            android:layout_marginStart="20dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="45dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="소주 한 잔"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:fontFamily="@font/roboto_regular"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="약 45ml"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3/2 (1.5) Oz"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:id="@+id/menue_detail_line_iv"
                            app:layout_constraintTop_toBottomOf="@id/menu_detail_mltooz_45_lv"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginVertical="20dp"
                            android:src="@drawable/mypage_line" />

                        <!-- 15ml-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/opacity20_transparent"
                            android:id="@+id/menu_detail_mltooz_15_lv"
                            app:layout_constraintEnd_toStartOf="@+id/menu_detail_mltooz_15_lv2"
                            app:layout_constraintTop_toBottomOf="@+id/menue_detail_line_iv"
                            app:layout_constraintStart_toStartOf="parent"
                            >
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@color/background_color_opacity80"
                                />
                            <ImageView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/shape_triangle_right_left_white" />

                            <ImageView
                                android:layout_width="15dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/shape_triangle_right_right_white" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/menu_detail_mltooz_15_lv2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/menu_detail_mltooz_15_lv"
                            app:layout_constraintTop_toTopOf="@id/menu_detail_mltooz_15_lv"
                            app:layout_constraintBottom_toBottomOf="@id/menu_detail_mltooz_15_lv"
                            android:layout_marginStart="20dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="30dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="소주잔 1/3"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:fontFamily="@font/roboto_regular"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="약 15ml"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1/2 Oz"/>
                        </LinearLayout>

                        <!-- 22ml-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/opacity20_transparent"
                            android:id="@+id/menu_detail_mltooz_22_lv"
                            app:layout_constraintEnd_toStartOf="@+id/menu_detail_mltooz_22_lv2"
                            app:layout_constraintTop_toBottomOf="@id/menu_detail_mltooz_15_lv"
                            app:layout_constraintStart_toStartOf="parent"
                            >
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@color/background_color_opacity80"
                                />
                            <ImageView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_width="15dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/shape_triangle_right_left_white" />

                            <ImageView
                                android:layout_width="15dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/shape_triangle_right_right_white" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/menu_detail_mltooz_22_lv2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/menu_detail_mltooz_22_lv"
                            app:layout_constraintTop_toTopOf="@id/menu_detail_mltooz_22_lv"
                            app:layout_constraintBottom_toBottomOf="@id/menu_detail_mltooz_22_lv"
                            android:layout_marginStart="20dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="30dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="소주잔 1/2"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:fontFamily="@font/roboto_regular"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="약 22.5ml"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3/4 Oz"/>
                        </LinearLayout>

                        <!-- 30ml-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/opacity20_transparent"
                            android:id="@+id/menu_detail_mltooz_30_lv"
                            app:layout_constraintEnd_toStartOf="@+id/menu_detail_mltooz_30_lv2"
                            app:layout_constraintTop_toBottomOf="@id/menu_detail_mltooz_22_lv"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="40dp"
                            >
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="68dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:background="@color/background_color_opacity80"
                                />
                            <ImageView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_width="15dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/shape_triangle_right_left_white" />

                            <ImageView
                                android:layout_width="15dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/shape_triangle_right_right_white" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/menu_detail_mltooz_30_lv2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/menu_detail_mltooz_30_lv"
                            app:layout_constraintTop_toTopOf="@id/menu_detail_mltooz_30_lv"
                            app:layout_constraintBottom_toBottomOf="@id/menu_detail_mltooz_30_lv"
                            android:layout_marginStart="20dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="30dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="소주잔 2/3"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:fontFamily="@font/roboto_regular"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="약 30ml"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Oz"/>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>