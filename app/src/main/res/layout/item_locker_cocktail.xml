<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_locker_circle_ci"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/detail_cocktail"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        app:civ_border_overlay="false"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/soft_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="10dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_locker_circle_ci2"
        android:visibility="gone"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_circle_white"
        android:src="@color/nam"
        app:civ_border_overlay="false"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/nam"
        app:layout_constraintTop_toTopOf="@+id/item_locker_circle_ci"
        app:layout_constraintBottom_toBottomOf="@+id/item_locker_circle_ci"
        app:layout_constraintStart_toStartOf="@+id/item_locker_circle_ci"
        app:layout_constraintEnd_toEndOf="@+id/item_locker_circle_ci"
        />


    <TextView
        android:id="@+id/item_locker_text_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:text="칵테일 이름"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_locker_circle_ci"
        app:layout_constraintStart_toStartOf="@id/item_locker_circle_ci"
        app:layout_constraintEnd_toEndOf="@id/item_locker_circle_ci"
        />


</androidx.constraintlayout.widget.ConstraintLayout>