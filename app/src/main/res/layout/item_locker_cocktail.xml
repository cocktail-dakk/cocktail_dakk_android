<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_locker_circle_ci"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/detail_cocktail"

        android:layout_gravity="center"
        android:background="@android:color/transparent"
        app:civ_border_overlay="false"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/soft_grey"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/item_locker_text_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:text="칵테일 이름"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_locker_circle_ci"
        app:layout_constraintStart_toStartOf="@id/item_locker_circle_ci"
        app:layout_constraintEnd_toEndOf="@id/item_locker_circle_ci"
        />


</androidx.constraintlayout.widget.ConstraintLayout>