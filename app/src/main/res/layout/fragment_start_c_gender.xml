<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <TextView
        android:id="@+id/item_start_setting_gender_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_start_c_title"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_start_temp_la"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/start_gender_next_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_start_setting_gender_title_tv" />

    <ImageView
        android:id="@+id/item_start_Setting_gender_m_ib"
        android:layout_width="100dp"
        android:scaleType="center"

        android:layout_height="150dp"
        android:background="#00000000"
        android:src="@drawable/setting_gender_m_off"
        app:layout_constraintTop_toTopOf="@+id/item_start_temp_la"
        app:layout_constraintEnd_toStartOf="@id/item_start_Setting_gender_w_ib"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_start_c_male"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/item_start_Setting_gender_m_ib"
        app:layout_constraintStart_toStartOf="@id/item_start_Setting_gender_m_ib"
        app:layout_constraintEnd_toEndOf="@id/item_start_Setting_gender_m_ib"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_start_c_female"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/item_start_Setting_gender_w_ib"
        app:layout_constraintStart_toStartOf="@id/item_start_Setting_gender_w_ib"
        app:layout_constraintEnd_toEndOf="@id/item_start_Setting_gender_w_ib"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/item_start_Setting_gender_w_ib"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="center"
        android:background="#00000000"
        android:src="@drawable/setting_icon_w_on_off"
        app:layout_constraintTop_toTopOf="@id/item_start_Setting_gender_m_ib"
        app:layout_constraintStart_toEndOf="@id/item_start_Setting_gender_m_ib"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_gender_next_tv"
        android:text="@string/fragment_start_next"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:background="@drawable/icon_setting_start"
        android:layout_marginBottom="80dp"
        android:gravity="center"        android:textColor="@color/white"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_gender_back_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:background="@mipmap/icon_detail_backarrow"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>