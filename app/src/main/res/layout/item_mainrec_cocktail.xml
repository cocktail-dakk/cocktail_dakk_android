<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/item_keywordrec_themecock_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_cocktail_21century" />

    <TextView
        android:id="@+id/item_keywordrec_themecock_kname_tv"
        app:layout_constraintStart_toStartOf="@+id/item_keywordrec_themecock_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_keywordrec_themecock_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_keywordrec_themecock_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_mainrec_cocktail_local_name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_keywordrec_themecock_ename_tv"
        app:layout_constraintStart_toStartOf="@+id/item_keywordrec_themecock_kname_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_keywordrec_themecock_kname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_mainrec_cocktail_eng_name"
        android:textSize="13sp" />


</androidx.constraintlayout.widget.ConstraintLayout>